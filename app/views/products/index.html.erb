<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table width ="100%">
  <thead>
    <tr>
      <th  >Name</th>
      <th  >Description</th>
      <th  >Image url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td width ="14%"><%= product.name %></td>
        <td width ="30%"><%= product.description %></td>
        <td width ="35%"><%= product.image_url %></td>
        <td width ="7%"><%= link_to 'Show', product %></td>
        <td width ="7%"><%= link_to 'Edit', edit_product_path(product) %></td>
        <td width ="7%"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

    

  </tbody>
</table>

<br>

